<div class="row">
  <div class="col-12 mt-2 wiki_column text-truncate">
    <table>
      <tbody>
        <ul style="list-style-type: disc; margin: 1em">

          {{#each files}}

            <li>
              <a
                href="{{url}}"
                class="text-truncate"
                style="display: block; text-decoration: none; font-size:0.8em;"
              >
                {{file}}
              </a>
            </li>

          {{/each}}
        </ul>
      </tbody>
    </table>
  </div>
</div>